run = "npm run start"
modules = ["web", "nodejs-14", "nix"]
[nix]
channel = "stable-25_05"

modules = ["nodejs-20"]

[workflows]
runButton = "Start AI System"

[[workflows.workflow]]
name = "Start Documentation Server"
author = 35427550
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm start || node server.js"

[[workflows.workflow]]
name = "Alternative Start"
author = 35427550
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "which node || echo \"Node.js not found, checking installation...\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node --version || echo \"Installing Node.js...\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node server.js"

[[workflows.workflow]]
name = "Start Server"
author = 35427550
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node server.js"

[[workflows.workflow]]
name = "Start AI System"
author = 35427550
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node server.js"

[[workflows.workflow]]
name = "Start Streamlit App"
author = 35427550
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install -r requirements.txt"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run main.py --server.address=0.0.0.0 --server.port=8501"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
run = ["sh", "-c", "npm run start"]
